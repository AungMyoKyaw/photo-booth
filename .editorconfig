# EditorConfig for Photo Booth
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript, TypeScript, Svelte
[*.{js,ts,svelte,jsx,tsx}]
indent_style = tab
indent_size = tab

# JSON files
[*.json]
indent_style = space
indent_size = 2

# JSON with comments (used by many tools)
[*.jsonc]
indent_style = space
indent_size = 2

# Package.json and lockfiles
[{package.json,bun.lockb,pnpm-lock.yaml}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# HTML files
[*.html]
indent_style = tab
indent_size = tab

# CSS, SCSS
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2
end_of_line = lf

# XML files
[*.{xml,xhtml,svg}]
indent_style = space
indent_size = 2

# Config files
[*.{editorconfig,eslintrc,prettierrc}]
indent_style = space
indent_size = 2

# Docker files
[{Dockerfile,docker-compose*.yml}]
indent_style = space
indent_size = 2

# Web manifest
[*.webmanifest]
indent_style = space
indent_size = 2
